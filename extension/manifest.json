{
  "manifest_version": 3,
  "name": "LinkedIn Lead Checker",
  "version": "1.0.0",
  "description": "Authenticate and prepare for LinkedIn lead analysis",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Lead Checker"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "public/icon-16.png",
    "48": "public/icon-48.png",
    "128": "public/icon-128.png"
  }
}
